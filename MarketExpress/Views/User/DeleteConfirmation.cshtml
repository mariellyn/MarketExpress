@model UserModel
@{
    ViewData["Title"] = "Confirmation delete user";
}

<div class="text-center">
    <h3>Really want to delete the user? (@Model.Name)</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="User" role="button">Back</a>
<a class="btn btn-danger btn-block" asp-action="Delete" asp-controller="User" asp-route-id="@Model.Id" role="button">Confirm Deletion</a>