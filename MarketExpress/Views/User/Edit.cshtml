@using MarketExpress.Enums
@model UserModel

@{
    ViewData["Title"] = "Edit user";
}
<div class="text-center">
    <h1 class="display-4">Edit user</h1>
</div>

<form asp-controller="User" asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="form-group col-md-4">
            <div class="form-group mb-3">
                <label for="name">Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter name user">
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="form-group mb-3">
                <label for="email">E-mail</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter your e-mail">
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group mb-3">
                <label for="login">Login</label>
                <input type="text" asp-for="Login" class="form-control" placeholder="Enter your login user">
                @Html.ValidationMessageFor(x => x.Login)
            </div>

            <div class="form-group mb-3">
                <label for="profile">Perfil</label>
                <select asp-for="Profile" class="form-control">
                    <option value="">Select</option>
                    <option value="@ProfileEnum.Admin">Admin</option>
                    <option value="@ProfileEnum.Logistic">Logistic</option>
                    <option value="@ProfileEnum.Sales">sale</option>
                </select>
                @Html.ValidationMessageFor(x => x.Profile)
            </div>



        </div>


    </div>

    </div>

    <button type="submit" class="btn btn-primary btn-block">Edit</button>
    <a class="btn btn-secondary btn-block" asp-controller="User" asp-action="Index" role="button">Back</a>
</form>
