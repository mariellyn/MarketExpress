@model ClientModel
@{
    ViewData["Title"] = "Confirmation delete client";
}

<div class="text-center">
    <h3>Really want to delete the contact? (@Model.Name)</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Client" role="button">Undelete</a>
<a class="btn btn-danger btn-block" asp-action="Delete" asp-controller="Client" asp-route-id="@Model.Id" role="button">Confirm Deletion</a>