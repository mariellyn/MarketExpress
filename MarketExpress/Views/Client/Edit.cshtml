@model ClientModel
@{
    ViewData["Title"] = "Edit client";
}
<div class="text-center">
    <h1 class="display-4">Edit Client</h1>
</div>

<form asp-controller="Client" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="name">Name</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Write your full name">
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="form-group col-md-4">
            <label for="email">E-mail</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Write your e-mail">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group col-md-4">
            <label for="birthDate">Birth date</label>
            <input type="date" asp-for="BirthDate" class="form-control">
            @Html.ValidationMessageFor(x => x.BirthDate)
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="address">Address</label>
            <input type="text" asp-for="Adress" class="form-control" placeholder="Write your address">
            @Html.ValidationMessageFor(x => x.Adress)
        </div>
        <div class="form-group col-md-4">
            <label for="locality">Locality</label>
            <input type="text" asp-for="Locality" class="form-control" placeholder="Write your locality">
            @Html.ValidationMessageFor(x => x.Locality)
        </div>
        <div class="form-group col-md-4">
            <label for="postalCode">Postal code</label>
            <input type="text" asp-for="PostalCode" class="form-control" placeholder="Write your postal code">
            @Html.ValidationMessageFor(x => x.PostalCode)
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="phone">Phone</label>
            <input type="tel" asp-for="Phone" class="form-control" placeholder="Write your phone number">
            @Html.ValidationMessageFor(x => x.Phone)
        </div>
        <div class="form-group col-md-4">
            <label for="nif">NIF</label>
            <input type="text" asp-for="NIF" class="form-control" placeholder="Write your NIF">
            @Html.ValidationMessageFor(x => x.NIF)
        </div>
        <div class="form-group col-md-4">
            <label for="customerNumber">Customer number</label>
            <input type="text" asp-for="CustumerNumber" class="form-control" placeholder="Write your customer number">
            @Html.ValidationMessageFor(x => x.CustumerNumber)
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Edit</button>
    <a class="btn btn-secondary btn-block" asp-controller="Client" asp-action="Index" role="button">Back</a>
</form>
