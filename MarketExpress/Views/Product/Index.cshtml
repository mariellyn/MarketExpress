@model List<ProductModel>

@{
    ViewData["Title"] = "Product";
}

<div class="text-center">
    <div class="gap2 d-md-flex justify-content-md-end">
        <a class="btn btn-success role-" Button" asp-controller="Product" asp-action="Add">Add Product</a>
    </div>

    <br />
    <br />


    @if (TempData["MessageSucess"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label=Close"">X</button>
            @TempData["MessageSucess"]
        </div>

    }

    @if (TempData["MessageError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label=Close"">X</button>
            @TempData["MessageError"]
        </div>

    }



    <h1 class="display-4"> List Product </h1>
    <br />
    <table class="table" id="table-padrao">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Description</th>
                <th scope="col">Final price</th>
                <th scope="col">Quantity in Stock</th>
                <th scope="col">Weight</th>
                <th scope="col">Category</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ProductModel product in Model )
                {
                    <tr>
                        <th scope="row">@product.Id</th>
                        <td>@product.Description</td>
                        <td>@product.Price</td>
                        <td>@product.QuantityStock</td>
                        <td>@product.Weigth</td>
                        <td>@product.Category</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@product.Id"  asp-controller="Product" asp-action="Edit">Edit</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@product.Id" asp-controller="Product" asp-action="DeleteConfirmation">Delete</a>
                            </div>
                        </td>

                    </tr>

                }

            }

        </tbody>
    </table>
</div>
