@model ProductModel

@{
    ViewData["Title"] = "Confirmation delete product";
}


<div class="text-center">
    <h3>Really want to delete the product? (@Model.Description) </h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Product" role="button">Undelete</a>
<a class="btn btn-danger btn-block" asp-action="Delete" asp-controller="Product" asp-route-id="@Model.Id" role="button">Confirm Deletion</a>