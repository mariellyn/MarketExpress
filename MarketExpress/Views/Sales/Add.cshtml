<div class="text-center">
    <h1 class="display-4">Add Sale</h1>
</div>

<form>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Sale identifier (ex: V2024/A/001)</span>
        </div>
        <input type="text" class="form-control" placeholder="V2024/A/001">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Date</span>
        </div>
        <input type="date" class="form-control">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Time</span>
        </div>
        <input type="time" class="form-control">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Client</span>
        </div>
        <input type="text" class="form-control">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Products Sold</span>
        </div>
        <textarea class="form-control"></textarea>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Observations</span>
        </div>
        <textarea class="form-control"></textarea>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Final Price</span>
        </div>
        <div class="input-group-prepend">
            <span class="input-group-text">$</span>
        </div>
        <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
        <div class="input-group-append">
            <span class="input-group-text">.00</span>
        </div>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="saleStatus">State</label>
        </div>
        <select class="custom-select" id="saleStatus">
            <option selected>Choose...</option>
            <option value="1">Encomendada</option>
            <option value="2">Em processamento</option>
            <option value="3">Processada</option>
            <option value="4">Enviada</option>
        </select>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="paidStatus">Paid</label>
        </div>
        <select class="custom-select" id="paidStatus">
            <option selected>Choose...</option>
            <option value="1">Yes</option>
            <option value="2">No</option>
        </select>
    </div>


</form>
