@model SalesModel

@{
    ViewData["Title"] = "Confirmation delete sale";
}


<div class="text-center">
    <h3>Really want to delete the sale? (@Model.SaleIdentifier) </h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Sales" role="button">Undelete</a>
<a class="btn btn-danger btn-block" asp-action="Delete" asp-controller="Sales" asp-route-id="@Model.Id" role="button">Confirm Deletion</a>